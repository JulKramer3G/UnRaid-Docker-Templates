<?xml version="1.0" encoding="utf-8"?>
 <Container version="2">
 <Name>Smart-Home-Logger</Name>
   <Overview>
Smart home data logger
   </Overview>

   <Category>Productivity: Status:Stable</Category>

   <Repository>ghcr.io/julkramer3g/smart_home_logger:latest</Repository>
   <GitHub>https://github.com/JulKramer3G/Smart_Home_Logger</GitHub>

   <Privileged>false</Privileged>

   <Support>https://github.com/JulKramer3G/UnRaid_Docker_Templates</Support>

   <Network>host</Network>

   <Icon>https://raw.githubusercontent.com/JulKramer3G/UnRaid-Docker-Templates/master/icons/smart_home_logger.png</Icon>

   <Config 
       Type="Path" 
       Name="Config directory" 
       Target="/usr/workdir/config" 
       Default="/mnt/user/appdata/smarthomelogger/config" 
       Mode="rw" 
       Description="This is where the configuration is stored"
       Required="true">/mnt/user/appdata/smarthomelogger/config</Config>

   <Config 
       Type="Path" 
       Name="Client certificates directory" 
       Target="/usr/workdir/client_certificates" 
       Default="/mnt/user/appdata/smarthomelogger/client_certificates" 
       Mode="rw" 
       Description="This is where the client certificates are stored"
       Required="true">/mnt/user/appdata/smarthomelogger/client_certificates</Config>

 </Container>