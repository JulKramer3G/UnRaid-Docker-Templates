<?xml version="1.0" encoding="utf-8"?>
 <Container version="2">
 <Name>Market Dashboard</Name>
   <Overview>
    Market overview dashboard, multi-user stock tracking dashboard
   </Overview>

   <Category>Productivity: Status:Stable</Category>

   <Repository>ghcr.io/julkramer3g/docker_template_gcr</Repository>

   <Privileged>false</Privileged>

   <Support>https://github.com/JulKramer3G/UnRaid_Docker_Templates</Support>

   <Network>host</Network>

   <WebUI>http://[IP]:[PORT:60000]/web/index.html</WebUI>

   <Icon>https://github.com/JulKramer3G/UnRaid_Docker_Templates/blob/main/icons/market_dashboard.png</Icon>
   
   <Config 
       Type="Path" 
       Name="Config directory" 
       Target="/config" 
       Default="/mnt/user/appdata/market_dashboard" 
       Mode="rw" 
       Description="This is where the files and configuration are stored"
       Required="true">/mnt/user/appdata/market_dashboard</Config>

   <Config 
       Type="Variable" 
       Name="Environment variable" 
       Target="MY_TEST_VAR" 
       Default="testtext" 
       Description="Environment variable for testing" 
       Mask="false" 
       Display="always" 
       Required="true">Username</Config>

 </Container>